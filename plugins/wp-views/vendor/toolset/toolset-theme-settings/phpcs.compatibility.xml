<?xml version="1.0"?>
<ruleset name="ToolsetPHP">
	<description>Toolset PHP Compatibility Standards</description>

	<config name="testVersion" value="5.3-"/>

	<rule ref="PHPCompatibility">
        <exclude name="PHPCompatibility.PHP.DefaultTimezoneRequired.Missing"/>
    </rule>

    <rule ref="Internal.NoCodeFound">
        <severity>0</severity>
    </rule>

    <file>./compatibility-loader</file>
    <file>./compatibility-modules</file>
    <file>./res</file>
    <file>./utils</file>
    <file>./bootstrap.php</file>
    <file>./loader.php</file>
    <file>./toolset-theme-settings-loader.php</file>
</ruleset>
